<div class="container">
    <h1> Horario de Clases</h1>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>M贸dulos / Horas</th>
                    <th>Lunes</th>
                    <th>Martes</th>
                    <th>Mi茅rcoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                </tr>
            </thead>
            <tbody id="cuerpoHorario">
                </tbody>
        </table>
    </div>

    <p class="instructions">Haz clic en cualquier celda para escribir. Se guarda autom谩ticamente al salir.</p>
</div>

<script>
    // Datos de los m贸dulos seg煤n tu imagen
    const bloques = [
        { mod: "01-02", hora: "8:15 - 9:35" },
        { mod: "03-04", hora: "9:50 - 11:10" },
        { mod: "05-06", hora: "11:25 - 12:45" },
        { mod: "07-08", hora: "13:45 - 15:05" },
        { mod: "09-10", hora: "15:20 - 16:40" },
        { mod: "11-12", hora: "16:55 - 18:15" }
    ];

    function inicializarHorario() {
        const tbody = document.getElementById("cuerpoHorario");
        const datosGuardados = JSON.parse(localStorage.getItem("miHorarioU")) || {};

        bloques.forEach(b => {
            const tr = document.createElement("tr");

            // Celda de hora/m贸dulo
            const tdModulo = document.createElement("td");
            tdModulo.className = "col-modulo";
            tdModulo.innerHTML = `${b.mod} <span class="hora-texto">${b.hora}</span>`;
            tr.appendChild(tdModulo);

            // Celdas de d铆as (1=Lunes, 5=Viernes)
            for (let dia = 1; dia <= 5; dia++) {
                const td = document.createElement("td");
                const idUnico = `celda-${b.mod}-${dia}`;
                
                td.innerHTML = `
                    <div contenteditable="true" 
                         class="celda-editable" 
                         id="${idUnico}" 
                         onblur="guardarCambios()">
                         ${datosGuardados[idUnico] || ""}
                    </div>
                `;
                tr.appendChild(td);
            }
            tbody.appendChild(tr);
        });
    }

    function guardarCambios() {
        const celdas = document.querySelectorAll(".celda-editable");
        let datosHorario = {};
        
        celdas.forEach(celda => {
            datosHorario[celda.id] = celda.innerHTML;
        });

        localStorage.setItem("miHorarioU", JSON.stringify(datosHorario));
        console.log("Horario guardado autom谩ticamente.");
    }

    // Cargar horario al abrir
    window.onload = inicializarHorario;
</script>

