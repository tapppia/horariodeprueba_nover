<div class="container">
    <h1>ðŸ“… Horario de Clases</h1>

    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Bloques</th>
                    <th>Lunes</th>
                    <th>Martes</th>
                    <th>MiÃ©rcoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                </tr>
            </thead>
            <tbody id="cuerpoHorario">
                </tbody>
        </table>
    </div>

    <button class="btn-reset" onclick="borrarTodo()">Limpiar Todo el Horario</button>
</div>

<script>
    // MÃ³dulos segÃºn tu imagen
    const bloques = [
        { mod: "01-02", hora: "8:15 - 9:35" },
        { mod: "03-04", hora: "9:50 - 11:10" },
        { mod: "05-06", hora: "11:25 - 12:45" },
        { mod: "07-08", hora: "13:45 - 15:05" },
        { mod: "09-10", hora: "15:20 - 16:40" },
        { mod: "11-12", hora: "16:55 - 18:15" }
    ];

    function cargarHorario() {
        const tbody = document.getElementById("cuerpoHorario");
        const datos = JSON.parse(localStorage.getItem("horarioAstro")) || {};

        bloques.forEach(b => {
            const tr = document.createElement("tr");
            
            // Celda de MÃ³dulo
            tr.innerHTML = `<td class="col-modulo">
                                ${b.mod}
                                <span class="hora-sub">${b.hora}</span>
                            </td>`;

            // Celdas de dÃ­as
            for (let dia = 1; dia <= 5; dia++) {
                const id = `h-${b.mod}-${dia}`;
                const contenido = datos[id] || "";
                
                const td = document.createElement("td");
                td.innerHTML = `<div contenteditable="true" 
                                     class="celda-editable" 
                                     id="${id}" 
                                     onblur="guardar()">
                                     ${contenido}
                                </div>`;
                tr.appendChild(td);
            }
            tbody.appendChild(tr);
        });
    }

    function guardar() {
        const celdas = document.querySelectorAll(".celda-editable");
        let info = {};
        celdas.forEach(c => {
            info[c.id] = c.innerHTML;
        });
        localStorage.setItem("horarioAstro", JSON.stringify(info));
    }

    function borrarTodo() {
        if(confirm("Â¿EstÃ¡s seguro de que quieres borrar todo el horario?")) {
            localStorage.removeItem("horarioAstro");
            location.reload();
        }
    }

    window.onload = cargarHorario;
</script>

